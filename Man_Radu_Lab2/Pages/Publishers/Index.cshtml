@page "{id:int?}"
@model Man_Radu_Lab2.Pages.Publishers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Publisher[0].PublisherName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PublisherData.Publishers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PublisherName)
                </td>
                <td>
                    <a asp-page="./Index" asp-route-id="@item.ID">Select</a>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.PublisherData.Books != null)
{
    <h3>Books Edited by Selected Publisher</h3>
    <table class="table">

        @foreach (var item in Model.PublisherData.Books)
        {
            string selectedRow = "";
            if (item.ID == Model.PublisherID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    @item.Title : @item.Author.FullName
                    <br />
                </td>
            </tr>
        }
    </table>
}
